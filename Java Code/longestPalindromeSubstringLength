import java.util.Scanner;
public class longestPalindromicSubstring {
    public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter some text: ");
        String text = scanner.nextLine();

        int maxLength = 0;
        maxLength = substringsFinder(text);

        System.out.println("The length of longest palindromic substring is " + maxLength);
    }

    public static int substringsFinder(String text){
        int maxLength = 0;
        for (int i = 0; i < text.length(); i++) {
            for (int j = i + 1; j <= text.length(); j++){
                String sub = text.substring(i, j);
                maxLength = palindromeStringChecker(sub, maxLength);
            }
        }
        return maxLength;
    }

    public static int palindromeStringChecker(String substring, int maxLength){
        String reversedSubstring = new StringBuilder(substring).reverse().toString();
        if (reversedSubstring.equals(substring)){
            if (maxLength < reversedSubstring.length()){
                maxLength = reversedSubstring.length();
            }
        }
        return maxLength;
    }

}
